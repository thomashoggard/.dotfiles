[include]
  path = ~/.gitconfig-personal
[include]
  path = ~/.gitconfig-league
[init]
  defaultBranch = main
[core]
	commitGraph = true
	editor = nvim
	ignorecase = false
[init]
	defaultBranch = main
[push]
	default = current ; Automatically set upstream branch when pushing.
[pull]
	rebase = true
[alias]
	adog = log --all --decorate --oneline --graph
  fpush = push --force-with-lease
  blog = log main.. --oneline
  co-pr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -
  odiff = !sh -c 'git diff origin/$(git branch --show-current)'
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[interactive]
  diffFilter = delta --color-only --features=interactive
[delta]
  side-by-side = true
[merge]
	tool = fugitive
[mergetool]
	keepBackup = false
[mergetool "fugitive"]
  cmd = nvim -c \"G mergetool\"
	trustExitCode = true
